{
    "name": "creative-lighthouse/creative-lighthouse",
    "type": "silverstripe-recipe",
    "description": "Website of creative lighthouse",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/wernerkrauss/silverstripe-ideannotator.git"
        }
    ],
    "require": {
        "php": "^8.4",
        "silverstripe/recipe-cms": "^6.0",
        "dnadesign/silverstripe-elemental": "^6.0",
        "atwx/silverstripe-vitehelper": "^1.0",
        "ext-json": "*",
        "colymba/gridfield-bulk-editing-tools": "^5.0",
        "undefinedoffset/sortablegridfield": "^3.0",
        "jonom/focuspoint": "^6.0",
        "silverstripe/login-forms": "^6.0",
        "silverstripe/linkfield": "^5.0",
        "symbiote/silverstripe-multivaluefield": "^7",
        "purplespider/silverstripe-basic-gallery-extension": "^5.0"
    },
    "require-dev": {
        "silverleague/ideannotator": "dev-silverstripe6 as 4.0",
        "wernerkrauss/silverstripe-rector": "^1",
        "cambis/silverstan": "^2",
        "squizlabs/php_codesniffer": "^3",
        "phpstan/extension-installer": "^1.0",
        "phpunit/phpunit": "^11.5",
        "dnadesign/silverstripe-populate": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "extra": {
        "expose": [
            "app/client/dist",
            "app/client/icons",
            "app/client/images"
        ],
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf",
        "rector": "vendor/bin/rector -v",
        "rector-dry": "vendor/bin/rector -v --dry-run",
        "phpstan": "vendor/bin/phpstan"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    }
}
