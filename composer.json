{
    "name": "creative-lighthouse/creative-lighthouse",
    "type": "silverstripe-recipe",
    "description": "Website of creative lighthouse",
    "require": {
        "php": "^8.2",
        "silverstripe/recipe-plugin": "^2",
        "silverstripe/recipe-cms": "^5.1",
        "dnadesign/silverstripe-elemental": "^5",
        "ext-json": "*",
        "colymba/gridfield-bulk-editing-tools": "^4.0",
        "undefinedoffset/sortablegridfield": "^2.2",
        "jonom/focuspoint": "^5.0",
        "tractorcow/silverstripe-fluent": "^7",
        "silverstripe/login-forms": "^5.1",
        "silverstripe/linkfield": "3.x-dev",
        "purplespider/silverstripe-basic-gallery-extension": "^4"
    },
    "repositories": {
        "silverstripe/linkfield": {
          "type": "git",
          "url": "https://github.com/silverstripe/silverstripe-linkfield.git"
        }
    },
    "require-dev": {
        "silverleague/ideannotator": "^3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "extra": {
        "expose": [
            "app/client/dist",
            "app/client/icons"
        ],
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
